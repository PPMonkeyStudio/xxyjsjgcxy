
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
	<package name="suser" namespace="/suser" extends="struts-default" strict-method-invocation="false">
		<action name="index" class="com.xxyjsjgcxy.suser.action.SuserAction"
			method="index">
			<result name="index">/index.jsp
			</result>
		</action>
		<action name="indexOld" class="com.xxyjsjgcxy.suser.action.SuserAction"
			method="indexOld">
			<result name="indexOld">/indexOld.jsp
			</result>
		</action>
		<action name="logout" class="com.xxyjsjgcxy.suser.action.SuserAction"
			method="logout">
			<result name="logout" type="redirectAction">/index
			</result>
		</action>

		<action name="news_list" class="com.xxyjsjgcxy.suser.action.SuserAction"
			method="news_list">
			<result name="news_list">/news_list.jsp
			</result>
		</action>
		<action name="news_details" class="com.xxyjsjgcxy.suser.action.SuserAction"
			method="news_details">
			<result name="news_details">/news_details.jsp
			</result>
		</action>

		<action name="getAnnex" class="com.xxyjsjgcxy.suser.action.SuserAction"
			method="getAnnex">
			<result name="getAnnex" type="stream">
				<!-- 指定下载文件的类型 -->
				<param name="contentType">application/octet-stream</param>
				<!-- 返回流 inputName为action中的流变量名称 -->
				<param name="inputName">inputStream</param>
				<!-- attachment 这个参数可以设置成下载时是否出现个下载提示框，或者直接打开的。 -->
				<!-- fileName指定生成的文件名字(适合动态生成文件名，比如做报表时，一般都要说是几月的统计数据之类)为action中变量 -->
				<param name="contentDisposition">
					filename=${fileName}
				</param>
				<!-- 指定下载文件时的缓冲大小 -->
				<param name="bufferSize">1024</param>
			</result>
		</action>

	</package>
</struts>
